{
	"name": "@natlibfi/melinda-marc-record-merge-reducers",
	"description": "Generic MARC record merge reducers for use with marc-record-merge",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-marc-record-merge-reducers-js",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-marc-record-merge-reducers-js/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-marc-record-merge-reducers-js.git"
	},
	"license": "LGPL-3.0+",
	"version": "1.0.0-alpha.1",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=12"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepare": "npm run build",
		"start": "node dist/index.js",
		"cli": "node dist/cli.js",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test nyc mocha --require @babel/register",
		"_test": "npm run lint && npm run test:base -- --recursive src",
		"test": "npm run lint",
		"test:dev": "npm run lint:dev && npm run test:base -- --recursive src && npm run coverage",
		"coverage": "nyc check-coverage --per-file",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src -w test-fixtures --exec 'npm run test:dev'"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^6.1.1",
		"@natlibfi/marc-record-validate": "^6.0.1",
		"@natlibfi/marc-record-validators-melinda": "git+https://github.com/NatLibFi/marc-record-validators-melinda.git#punc_single_field",
		"debug": "^4.3.1",
		"normalize-diacritics": "^2.13.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.14.5",
		"@babel/core": "^7.14.6",
		"@babel/eslint-parser": "^7.14.5",
		"@babel/node": "^7.14.5",
		"@babel/preset-env": "^7.14.5",
		"@babel/register": "^7.14.5",
		"@natlibfi/eslint-config-melinda-backend": "^1.0.6",
		"@natlibfi/fixugen": "^1.0.0",
		"@natlibfi/fixura": "^2.1.3",
		"babel-plugin-istanbul": "^6.0.0",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.3.4",
		"cross-env": "^7.0.3",
		"eslint": "^7.28.0",
		"mocha": "^9.0.0",
		"nodemon": "^2.0.7",
		"nyc": "^15.1.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "12"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"*/*.spec.js",
			"*/**/*.spec.js"
		],
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
